{
	"$schema": "https://schemas.blueprint-blocks.com/blueprint.json",
	"apiVersion": 1,
	"blockEdit": {
		"tagName": "div",
		"className": [
			"hello",
			"world",
			{
				"is-hello": true
			},
			{
				"is-world": "{{ block.subtitle }}"
			}
		],
		"children": [
			{
				"type": "html",
				"tagName": "div",
				"className": [
					"wrap"
				],
				"children": [
					{
						"type": "rich-text-field",
						"name": "title",
						"attributeName": "title",
						"tagName": "h1",
						"placeholder": "Enter a title...",
						"className": [
							"hello"
						]
					},
					{
						"type": "html",
						"tagName": "sl-rating",
						"label": "Rating",
						"disabled": true,
						"value": "{{ block.rating }}"
					},
					{
						"type": "html",
						"tagName": "div",
						"innerHtml": "{{ block.subtitle }} {{ block.dog }}"
					},
					{
						"type": "rich-text-field",
						"name": "cta",
						"attributeName": "cta",
						"tagName": "sl-button",
						"className": [
							"button"
						],
						"placeholder": "Enter a label..."
					},
					{
						"type": "inner-blocks"
					},
					{
						"type": "repeating-field",
						"name": "labels",
						"attributeName": "labels",
						"children": [
							{
								"type": "rich-text-field",
								"name": "label",
								"attributeName": "label",
								"placeholder": "Enter a label..."
							}
						],
						"min": 0,
						"max": 3
					}
				]
			},
			{
				"type": "media-field",
				"label": "Media Label",
				"name": "image",
				"attributeName": "image",
				"multiple": false
			},
			{
				"type": "link-field",
				"name": "link",
				"attributeName": "link",
				"placeholder": "Enter a label..."
			}
		]
	},
	"blockSave": null,
	"blockSidebar": [
		{
			"type": "grid-field",
			"label": "Columns",
			"name": "columns",
			"attributeName": "columns"
		},
		{
			"type": "toggle-field",
			"label": "Toggle",
			"name": "toggle",
			"attributeName": "toggle",
			"multiple": true,
			"options": [
				{
					"label": "Abc",
					"value": "abc"
				},
				{
					"label": "Def",
					"value": "def"
				},
				{
					"label": "Ghi",
					"value": "ghi"
				},
				{
					"label": "Jlk",
					"value": "jlk"
				}
			]
		},
		{
			"type": "color-field",
			"name": "color",
			"attributeName": "color",
			"label": "Color",
			"colors": [
				{
					"name": "Red",
					"slug": "red",
					"color": "#ff0000"
				},
				{
					"name": "Green",
					"slug": "green",
					"color": "#00ff00"
				},
				{
					"name": "Blue",
					"slug": "blue",
					"color": "#0000ff"
				}
			],
			"clearable": false,
			"enableAlpha": true
		},
		{
			"type": "gradient-field",
			"name": "gradient",
			"attributeName": "gradient",
			"label": "Gradient",
			"gradients": [
				{
                    "name": "JShine",
                    "gradient": "linear-gradient(135deg,#12c2e9 0%,#c471ed 50%,#f64f59 100%)",
                    "slug": "jshine"
                },
                {
                    "name": "Moonlit Asteroid",
                    "gradient": "linear-gradient(135deg,#0F2027 0%, #203A43 0%, #2c5364 100%)",
                    "slug": "moonlit-asteroid"
                },
                {
                    "name": "Rastafarie",
                    "gradient": "linear-gradient(135deg,#1E9600 0%, #FFF200 0%, #FF0000 100%)",
                    "slug": "rastafari"
                }
			],
			"clearable": false
		},
		{
			"type": "boolean-field",
			"label": "Boolean",
			"name": "truefalse",
			"attributeName": "truefalse"
		},
		{
			"type": "anchor-field",
			"label": "Anchor",
			"name": "anchor",
			"attributeName": "anchor"
		},
		{
			"type": "text-field",
			"label": "Subtitle in Sidebar",
			"name": "subtitle",
			"attributeName": "subtitle",
			"placeholder": "Enter a subtitle..."
		},
		{
			"type": "textarea-field",
			"label": "Subtitle in Sidebar",
			"name": "subtitle",
			"attributeName": "subtitle",
			"placeholder": "Enter a subtitle..."
		},
		{
			"type": "url-field",
			"label": "URL in Sidebar",
			"name": "url",
			"attributeName": "url",
			"placeholder": "Enter a url..."
		},
		{
			"type": "number-field",
			"label": "A Number Field",
			"name": "number",
			"attributeName": "number",
			"min": 0,
			"max": 10,
			"step": 2
		},
		{
			"type": "number-field",
			"label": "Rating",
			"name": "number",
			"attributeName": "rating",
			"min": 1,
			"max": 5
		},
		{
			"type": "range-field",
			"label": "A Range Field",
			"name": "number",
			"attributeName": "number",
			"min": 0,
			"max": 10,
			"step": 2
		},
		{
			"type": "select-field",
			"label": "A Select Field",
			"name": "dog",
			"attributeName": "dog",
			"options": [
				{
					"label": "Poodle",
					"value": "poodle"
				},
				{
					"label": "Golden Retriever",
					"value": "golden-retriever"
				},
				{
					"label": "German Shepherd",
					"value": "german-shepherd"
				}
			]
		},
		{
			"type": "increment-field",
			"label": "An Increment Field",
			"name": "dog",
			"attributeName": "dog",
			"options": [
				{
					"label": "Poodle",
					"value": "poodle"
				},
				{
					"label": "Golden Retriever",
					"value": "golden-retriever"
				},
				{
					"label": "German Shepherd",
					"value": "german-shepherd"
				}
			]
		},
		{
			"type": "width-field",
			"label": "Width",
			"name": "width",
			"attributeName": "width",
			"min": 240,
			"max": 1240,
			"step": 20
		},
		{
			"type": "margin-field",
			"label": "Margin",
			"name": "margin",
			"attributeName": "margin"
		},
		{
			"type": "email-field",
			"label": "Email",
			"name": "email",
			"attributeName": "email",
			"placeholder": "john.smith@gmail.com"
		},
		{
			"type": "position-field",
			"label": "Position",
			"name": "position",
			"attributeName": "position",
			"axis": "both"
		}
	],
	"blockToolbar": [
		{
			"type": "text-size-field",
			"label": "Text Size",
			"name": "textSize",
			"attributeName": "textSize"
		},
		{
			"type": "align-field",
			"label": "Align",
			"name": "align",
			"attributeName": "align"
		},
		{
			"type": "text-align-field",
			"label": "Text Align",
			"name": "textAlign",
			"attributeName": "textAlign"
		}
	]
}
