{
	"$schema": "https://schemas.blueprint-blocks.com/blueprint.json",
	"apiVersion": 1,
	"blockEdit": {
		"tagName": "div",
		"className": [
			"hello",
			"world",
			{
				"is-hello": true
			},
			{
				"is-world": "{{ block.world }}"
			}
		],
		"children": [
			{
				"type": "html",
				"tagName": "div",
				"className": [
					"wrap"
				],
				"children": [
					{
						"type": "rich-text-field",
						"name": "title",
						"attributeName": "title",
						"tagName": "h1",
						"placeholder": "Enter a title...",
						"className": [
							"hello"
						]
					},
					{
						"type": "inner-blocks"
					},
					{
						"type": "link-field",
						"name": "link",
						"attributeName": "link",
						"placeholder": "Enter a label..."
					}
				]
			}
		]
	},
	"blockSave": null,
	"blockSidebar": [
		{
			"type": "boolean-field",
			"label": "Is world?",
			"name": "boolean",
			"attributeName": "boolean"
		}
	],
	"blockToolbar": [
		{
			"type": "text-size-field",
			"label": "Text Size",
			"name": "textSize",
			"attributeName": "textSize"
		},
		{
			"type": "text-align-field",
			"label": "Text Align",
			"name": "textAlign",
			"attributeName": "textAlign"
		}
	]
}
