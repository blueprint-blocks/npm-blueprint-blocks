{{=<% %>=}}
{
	"$schema": "https://schemas.blueprint-blocks.com/blueprint.json",
	"apiVersion": 1,
	"blockEdit": {
		"tagName": "div",
		"className": [
			"hello",
			"world",
			"color-{{ block.color }}",
			{
				"has-subtitle": "{{ block.subtitle }}"
			}
		],
		"style": {
			"backgroundColor": "{{ block.color }}"
		},
		"children": [
			{
				"type": "rich-text-field",
				"name": "title",
				"attributeName": "title",
				"tagName": "h2",
				"placeholder": "Enter a title...",
				"className": [
					"{{ block.textSize }}"
				]
			},
			{
				"type": "html",
				"tagName": "p",
				"innerHtml": "{{ block.subtitle }}"
			},
			{
				"type": "link-field",
				"name": "link",
				"attributeName": "link",
				"placeholder": "Enter a label..."
			},
			{
				"type": "inner-blocks"
			}
		]
	},
	"blockSave": null,
	"blockSidebar": [
		{
			"type": "color-field",
			"name": "color",
			"attributeName": "color",
			"label": "Color",
			"colors": [
				{
					"name": "White",
					"slug": "white",
					"color": "#ffffff"
				},
				{
					"name": "Red",
					"slug": "red",
					"color": "#ff0000"
				},
				{
					"name": "Green",
					"slug": "green",
					"color": "#00ff00"
				},
				{
					"name": "Blue",
					"slug": "blue",
					"color": "#0000ff"
				}
			],
			"clearable": false,
			"enableAlpha": true
		},
		{
			"type": "text-field",
			"label": "Subtitle",
			"name": "subtitle",
			"attributeName": "subtitle",
			"placeholder": "Enter a subtitle..."
		}
	],
	"blockToolbar": [
		{
			"type": "text-size-field",
			"label": "Text Size",
			"name": "textSize",
			"attributeName": "textSize"
		},
		{
			"type": "text-align-field",
			"label": "Text Align",
			"name": "textAlign",
			"attributeName": "textAlign"
		}
	]
}
<%={{ }}=%>